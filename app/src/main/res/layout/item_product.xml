<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_launcher_background" />
    <TextView
        android:id="@+id/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:layout_toEndOf="@id/menu_icon"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/menu_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingBottom="2dp"
        android:layout_toEndOf="@id/menu_icon"
        android:layout_toStartOf="@id/remove_from_cart"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/menu_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="end"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:id="@+id/remove_from_cart"
        android:visibility="invisible"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/menu_quantity"
        android:layout_marginEnd="2dp"
        android:paddingBottom="12dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/outline_delete_24" />

    <TextView
        android:id="@+id/menu_quantity"
        android:visibility="invisible"
        android:text="1"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/add_to_cart"
        android:layout_marginEnd="2dp"
        android:paddingBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/add_to_cart"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:paddingBottom="12dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/white"
        android:src="@drawable/baseline_add_shopping_cart_24" />

</RelativeLayout>